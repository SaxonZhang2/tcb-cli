<!--index.wxml-->
<view class="container">

  <image wx-if="{{idCardImage}}" class="idcard" src="{{idCardImage}}"></image>
  <button class="upload" type="default" bindtap="uploadFile"> 上传身份证自动解析 </button>

  <form>
    <input type="text" placeholder="姓名" value="{{name}}"></input>
    <input type="text" placeholder="性别" value="{{sex}}"></input>
    <input type="text" placeholder="身份证号" value="{{idCard}}"></input>
    <button form-type="submit" type="primary" bindtap="submitId">提交</button>
  </form>

</view>
